@model Person

@{
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
    ViewBag.Title = "PersonCreate";
}
    
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="background-color:red;width: 24px;">&times;</button>
    <center style="padding-top: 4px;"><h4><b>KAYIT DÜZENLE</b></h4></center>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
<div class="form-horizontal" style="">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Name, "ADI SOYADI", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.PersonTypeId, "GÖREVİ", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-3">
            @Html.DropDownList("PersonTypeId", null, htmlAttributes: new { @class = "form-control select2" })
            @Html.ValidationMessageFor(model => model.PersonTypeId, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.PhoneNumber, "TELEFON", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.StartDate, "BAŞLAMA TARİHİ", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", @type = "Date", @Value = Model.StartDate.ToString("yyyy-MM-dd") } })
            @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.EndDate, "BİTİŞ TARİHİ", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", @type = "Date", @Value = (Model.EndDate != null ? Model.EndDate.Value.ToString("yyyy-MM-dd") : "") } })
            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12" align="center">
            <button type="button" class="btn btn-danger" data-dismiss="modal">KAPAT</button>
            <input type="submit" value="KAYDET" class="btn btn-success" />
        </div>
    </div>
</div>
}

@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@
}
