@model Company

@{
    Layout = "~/Views/Shared/_LayoutPartial.cshtml";
    ViewBag.Title = "ApartmentCreate";
}

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="background-color:red;width: 24px;">&times;</button>
        <center style="padding-top: 4px;"><h4><b>KAYIT DÜZENLE</b></h4></center>
    </div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Name, "Adı", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.PhoneNumber, "TELEFON", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.PersonName, "YETKİLİ", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.PersonName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            @Html.ValidationMessageFor(model => model.PersonName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Adress, "ADRES", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-11">
            <textarea class="form-control" name="Adress">@Model.Adress</textarea>
            @*@Html.EditorFor(model => model.Adress, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.ValidationMessageFor(model => model.Adress, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12" align="center">
            <button type="button" class="btn btn-danger" data-dismiss="modal">KAPAT</button>
            <input type="submit" value="KAYDET" class="btn btn-success" />
        </div>
    </div>
</div>
}
